{
  "name": "employee-management-system",
  "version": "1.0.0",
  "description": "Modern Employee Management System with glassmorphism UI",
  "private": false,
  "license": "MIT",
  "author": "Employee Management System Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/persmontechnologies/Employee-Management-Software.git"
  },
  "keywords": [
    "employee-management",
    "hr",
    "payroll",
    "attendance",
    "react",
    "nestjs",
    "typescript",
    "glassmorphism"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev": "npm-run-all --parallel dev:*",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build": "npm-run-all --parallel build:*",
    "start": "npm run start --workspace=backend",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
